<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vijey.gamedesigner.cd.revelationministriesfull.RegisterActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_styles"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texTitle"
        android:padding="10dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Register"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/usernameField"
        android:background="@drawable/edit_text_styles"
        android:padding="10dp"
        android:textColor="#fff"
        android:hint="username"
        android:inputType="text"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:background="@drawable/edit_text_styles"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:hint="email"
        android:textColor="#fff"
        android:id="@+id/emailField"
        android:inputType="textEmailAddress"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:background="@drawable/edit_text_styles"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:hint="password"
        android:textColor="#fff"
        android:id="@+id/passwordField"
        android:inputType="textPassword"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/registerBtn"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:background="@drawable/action_button_style"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Register"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/loginTxtView"
        android:padding="10dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Already register ? Login"
        android:textSize="18dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="134dp" /></LinearLayout>
</LinearLayout>
